{
    "version": 2,
    "configurePresets": [
      {
        "name": "windows-base",
        "generator": "Unix Makefiles",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_BUILD_PLATFORM": "WINDOWS"
        } 
      },
      {
        "name": "windows-debug",
        "inherits": "windows-base",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug"
        }
      },
      {
